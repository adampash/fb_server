<% if @query.nil? %>
  <h4 class="total_results"><%= @results.total_count %> posts and comments by "<%= @user_name %>"</h4>
<% else %>
  <h4 class="total_results"><%= @results.total_count %> posts and comments containing "<%= @query %>"</h4>
<% end %>
<% @results.each do |result| %>
  <div class="post_container">
    <%= render result, :search_result => true %>
    <%= link_to "See full post",
      "/posts/#{result.class == Post ? result.id : result.post.id}",
      class: 'see_more'
    %>
  </div>
<% end %>
  <%= paginate @results %>
